<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bg"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="20dp"
               android:layout_height="30dp"
               android:layout_marginLeft="20dp"
               android:src="@drawable/ic_location"></ImageView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:text="Dholpur"
               android:textColor="#ffff"
               android:textStyle="bold"
               android:textSize="20sp"></TextView>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="7dp"
           >
           <androidx.appcompat.widget.SearchView
               android:layout_width="270dp"
               android:layout_height="40dp"
               app:queryHint="Search here"
               android:queryHint="Search here"
               app:iconifiedByDefault="false"
               android:background="@drawable/shape_home"
               app:defaultQueryHint="Search here"
               ></androidx.appcompat.widget.SearchView>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <ImageView
               android:layout_marginTop="3dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="18dp"
               android:foregroundGravity="right"
               android:src="@drawable/ic_shopping"></ImageView>

           </RelativeLayout>

       </LinearLayout>
        
    </LinearLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover your food"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#0B0B0B"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special thali combos for daily basis"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#0B0B0B"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="3dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/combo"></ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/veg"
                    android:layout_margin="10dp"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:background="#35F63E"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="  Up   to \n 30% off "
                    ></TextView>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:text="Bhojnalaya"
                        android:textColor="#050505"
                        android:textSize="21sp"
                        android:textStyle="normal"></TextView>

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="9dp"
                       android:background="@drawable/rating">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="4.3"
                           android:textSize="12sp"
                           android:textColor="#ffff">
                       </TextView>
                       <ImageView
                           android:layout_width="14dp"
                           android:layout_height="14dp"
                           android:src="@drawable/ic_star"
                           android:layout_margin="2dp"
                           android:layout_alignParentLeft="true"
                           ></ImageView>

                          </LinearLayout>

                   </RelativeLayout>

                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="1dp"
                            android:text="Rs-70 for one"
                            android:textColor="#F60707"
                            android:textSize="10sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="#Bestseller"
                            android:textColor="#FD3E03"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="18dp"
                            android:textSize="11sp"></TextView>

                    </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Restuarants around you"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#090909"
            ></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="3dp"
            android:id="@+id/recycler2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

</LinearLayout>