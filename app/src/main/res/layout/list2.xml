<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <ImageView
        android:id="@+id/list2_img"
        android:layout_width="fill_parent"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizza"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/veg"
            android:layout_margin="10dp"></ImageView>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Rajasthani Restaurant"
            android:textColor="#050505"
            android:textSize="18sp"
            android:textStyle="normal"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rating">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list2_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.3"
                    android:textSize="12sp"
                    android:textColor="#ffff">
                </TextView>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"
                    android:layout_margin="2dp"
                    android:layout_alignParentLeft="true"
                    ></ImageView>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list2_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="1dp"
            android:text="Rs-150 for one"
            android:textColor="#F60707"
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/list2_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text=" "
            android:textColor="#FD3E03"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:textSize="11sp"></TextView>

    </RelativeLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>